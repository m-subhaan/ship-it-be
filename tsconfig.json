{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": ["ESNext"],
        "outDir": "./build/",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": false,
        "skipLibCheck": true,
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "pretty": true,
        "traceResolution": false,
        "typeRoots": ["./node_modules/@types", "./src/typings"],
        "baseUrl": "./",
        "paths": {
            "@docs/*": ["docs/*"],
            "@controllers/*": ["http/Controllers/*"],
            "@middlewares/*": ["http/Middlewares/*"],
            "@routes/*": ["http/Routes/*"],
            "@server/*": ["http/Server/*"],
            "@appUtils/*": ["src/Application/Utils/*"],
            "@entities/*": ["src/Domain/Entities/*"],
            "@valueObjects/*": ["src/Domain/ValueObjects/*"],
            "@validations/*": ["src/Domain/Validations/*"],
            "@infraConfig/*": ["src/Infrastructure/Config/*"],
            "@repositories/*": ["src/Infrastructure/PostgresRepository/*"],
            "@infraUtils/*": ["src/Infrastructure/Utils/*"],
            "@infraServices/*": ["src/Infrastructure/Services/*"],
            "@logger/*": ["src/Infrastructure/Logger/*"],
            "@infrastructure/*": ["src/Infrastructure/*"],
            "@domain/*": ["src/Domain/*"],
            "@application/*": ["src/Application/*"],
            "@typings/*": ["src/typings/*"],
            "@http/*": ["http/*"],
            "@src/*": ["src/*"],
        },
        "strict": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "allowUnusedLabels": false,
        "allowUnreachableCode": false,
        "exactOptionalPropertyTypes": true,
        "strictNullChecks": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noPropertyAccessFromIndexSignature": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "verbatimModuleSyntax": false,
        "checkJs": true,
        "noImplicitAny": false,
        "useUnknownInCatchVariables": true
    },
    "include": ["**/*"],
    "exclude": ["node_modules", "build"],
    "ts-node": {
        "files": true,
        "require": ["tsconfig-paths/register"]
    }
}
